<Page x:Class="atm.PageMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:atm"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMain">

    <Grid>
        <Button Name="btnBack" Style="{StaticResource BtnTransparent}" Content="Назад"
                Click="btnBack_Click"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Name="btnWithdraw" Content="Снять наличные" Style="{StaticResource btnMain}"
                    Click="btnWithdraw_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="7"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Name="btnReference" Content="Получить справку" Style="{StaticResource btnMain}"
                    Click="btnReference_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="7"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Page>
